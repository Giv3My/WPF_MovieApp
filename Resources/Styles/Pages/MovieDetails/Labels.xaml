<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="MovieInfoTitle" TargetType="Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontFamily" Value="{StaticResource Inter}" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#dddad6" />
    </Style>

    <Style x:Key="MovieInfoItemBold" TargetType="Label" BasedOn="{StaticResource MovieInfoTitle}">
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style x:Key="MovieInfoItem" TargetType="Label" BasedOn="{StaticResource MovieInfoItemBold}">
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

</ResourceDictionary>